#!/usr/bin/env node

'use strict'

const rollup = require('rollup')
const buble = require('rollup-plugin-buble')
const uglify = require('rollup-plugin-uglify').uglify
const filesize = require('rollup-plugin-filesize')
const path = require('path')
const minimist = require('minimist')

const options = minimist(process.argv.slice(2), {
  default: {
    format: 'cjs',
    out: 'build'
  }
})

async function build(config) {
  let bundle = await rollup.rollup({
    input: config.entry,
    plugins: [
      buble(),
      uglify({
        compress: {
          passes: 3,
          drop_console: true,
          keep_infinity: true,
          toplevel: true,
          warnings: true
        },
        mangle: {
          toplevel: true,
          properties: {
            regex: /^_/,
            reserved: ['__esModule', '__MICROCOSM_DEVTOOLS_GLOBAL_HOOK__']
          },
        },
        nameCache: {},
        warnings: true
      }),
      filesize()
    ],
    external: ['react', 'react-dom', 'preact', 'microcosm', 'form-serialize']
  })

  await bundle.write({
    globals: {
      react: 'React',
      'react-dom': 'ReactDOM',
      preact: 'Preact',
      microcosm: 'Microcosm',
      'form-serialize': 'FormSerialize'
    },
    file: config.output,
    format: options.format,
    name: config.name,
    sourcemap: true
  })
}

const packages = [
  {
    name: 'MicrocosmReact',
    entry: path.resolve('src/react.js'),
    output: path.resolve(options.out, 'react.js')
  },
  {
    name: 'MicrocosmPreact',
    entry: path.resolve('src/preact.js'),
    output: path.resolve(options.out, 'preact.js')
  }
]

packages.forEach(build)
