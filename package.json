{
  "private": true,
  "engines": {
    "node": ">= 6.10"
  },
  "scripts": {
    "format": "prettier --write './packages/**/*.js'",
    "build": "lerna run build --concurrency 1",
    "watch": "lerna run --parallel watch",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:prod": "yarn build && BUNDLED=true jest",
    "lint": "eslint packages --cache --cache-location=node_modules/",
    "clean": "git clean -Xdf"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "codecov": "^3.0.4",
    "eslint": "^5.2.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-flowtype-errors": "^3.6.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jest": "^21.18.0",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.10.0",
    "flow-bin": "^0.77.0",
    "jest": "^23.4.2",
    "lerna": "^3.0.0-rc.0",
    "prettier": "^1.14.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "workspaces": [
    "packages/microcosm",
    "packages/microcosm-devtools",
    "packages/microcosm-dom",
    "packages/microcosm-graphql",
    "packages/microcosm-http",
    "packages/microcosm-www",
    "packages/examples/*"
  ]
}
