{
  "testURL": "http://localhost:3000",
  "testEnvironment": "node",
  "coverageReporters": [
    "lcov",
    "text",
    "html"
  ],
  "setupTestFrameworkScriptFile": "./helpers/setup.js",
  "roots": [
    "<rootDir>",
    "<rootDir>/../src"
  ],
  "moduleNameMapper": {
    "microcosm": "<rootDir>/../src/index.js"
  },
  "collectCoverageFrom": [
    "src/**/*.{js,json}",
    "!src/addons/jest-matchers.js"
  ]
}
